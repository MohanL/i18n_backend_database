# update the percentage
total_count = @locale.translations.count
@percent = (total_count - @translations.size).to_f / total_count.to_f * 100
page << "new Ajax.Updater('translate_percent', '', {}, parameters: { percent: '#{@percent}' });"

# remove the translation div
page.remove("translation_#{@translation.class}_#{@translation.id}")
